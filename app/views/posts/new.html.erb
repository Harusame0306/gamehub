<%= javascript_include_tag "menu.js" %>
<%= javascript_include_tag "jquery.js" %>
<% content_for :css do %>
  <%= stylesheet_link_tag 'game_new' %>
<% end %>

<% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, "error") %>エラーがあります。必須を埋めてください。</h2>
    <ul>
        <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<div class="textform">
<h2>Post</h2>
<div class="postform">
  <%= form_with model: @post do |f| %>
    <%= f.label :本文 %><br>
    <%= f.text_area :body, style: "width: 70%; height: 50px;" %>
    <br>
    <%= f.label :画像 %><br>
    <%= f.file_field :game_image, accept: "image/jpeg" %><br>
    <br><br>
    <span class="button"><%= f.submit "Post", class: "form-control btn btn-success" %></span>
  <% end %>
</div>
</div>