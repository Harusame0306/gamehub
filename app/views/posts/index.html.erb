

<div class="posts-box">
    <h2>Posts</h2>
    <div class="posts">
      <% @posts.each do |post| %>
        <div class="postitem">
          <div class="postuser">
          <span><%= attachment_image_tag post.user, :profile_image, fallback: "no-image.png", format: 'jpeg', size: "50x50", class:"profileimage" %></span>
          <span><%= post.user.username %></span>
          </div>
            <span class="postbody">
            <%= link_to post_path(post), class:"link" do %><%= post.body %><% end %></a><br>
            <% if post.game_image.present? %>
            <%= link_to post_path(post), class:"link" do %><%= attachment_image_tag post, :game_image, format: 'jpeg', size: "100x100", class:"postimage" %><% end %>
            <% end %>
            </span>
            <span class="comment">
              <%= link_to post_path(post), class:"link" do %><small><%= post.created_at %></small>
              <span><i class="fa-regular fa-comment fa-lg" style="color: #555;"></i>  <%= post.post_comments.count %></span><% end %>
              <% if post.user_id == current_user.id %>
              <span><%= link_to post_path(post), data: { turbo_method: :delete} do %>
              <i class="fa-solid fa-trash fa-lg" style="color: #555;"></i><% end %>
              <% end %></span>
            </span>
            
        </div>
      <% end %>
    </div>
  </div>



<% content_for :css do %>
<%= stylesheet_link_tag 'post_index' %>
<% end %>
<%= javascript_include_tag "menu.js" %>
<%= javascript_include_tag "jquery.js" %>