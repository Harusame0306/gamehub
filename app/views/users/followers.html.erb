<% if @users.present? %>
    <% @users.each do |user| %>
        <td><%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100" %>
        <% end %></td>
        <td><%= user.username %></td>
        <td><%= user.usernumber %></td>
    <% end %>
<% else %>
    <h2>フォロワーはいません。</h2>
<% end %>