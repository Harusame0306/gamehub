<h1>Users page</h1>

<%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", format: 'jpeg', size: "100x100" %>
<%= @user.username %>
<%= @user.usernumber %>
<%= @user.profile %>

<% if @user.id == current_user.id %>
<%= @user.email %>
<% end %>

<% if @user.id == current_user.id %>
<%= link_to "Edit", edit_user_path(@user) %>
<% end %>

<% @user.games.each do |game| %>
<div>
    <%= attachment_image_tag game, :game_image, fallback: "no-image.png", format: 'jpeg', size: "100x100" %>
    <%= game.gametitle %>
    <% if @user.id == current_user.id %>
    <%= link_to "Edit", edit_game_path(game) %>
    <%= link_to 'Delete', game_path(game), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？"} %>
    <% end %>
</div>
<% end %>