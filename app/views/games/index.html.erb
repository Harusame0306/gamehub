<%= javascript_include_tag "jquery.js" %>
<%= javascript_include_tag 'star.js' %>
<%= javascript_include_tag "menu.js" %>
<% content_for :css do %>
  <%= stylesheet_link_tag 'homeindex' %>
<% end %>


<div class="games-box">
    <h2>Game reviews</h2>
    <div id="games1">
    <% @games.each do |game| %>
      <div id="game1">
        <%= link_to game_path(game), class:"link" do %><%= truncate(game.gametitle, length: 8, omission: '…') %><% end %><br>
        <% if game.gameurl.present? %>
        <%= link_to game_path(game) do %><%= image_tag game.gameurl, size: "100x100", alt: "Game Image", class:"gameimage" %><% end %><br>
        <% else %>
        <%= link_to game_path(game) do %>
        <%= attachment_image_tag game, :game_image, fallback: "no-image.png", format: 'jpeg', size: "100x100", class:"gameimage" %><% end %><br>
        <% end %>
        <%= link_to user_path(game.user.id), class:"link" do %><small class="user">user: <%= truncate(game.user.username, length: 6, omission: '…') %></small><% end %>
      </div>
    <% end %>
    </div>
</div>
