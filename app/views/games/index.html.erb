<h1>AllGames</h1>

<% @games.each do |game| %>
<div>
    <%= link_to game_path(game) do %>
    <%= attachment_image_tag game, :game_image, format: 'jpeg', size: "100x100" %>
    <% end %>
    <%= link_to game_path(game) do %><%= game.gametitle %><% end %>
    <%= link_to user_path(game.user.id) do %><%= game.user.username %><% end %>
    <small><%= game.created_at %></small>
</div>
<% end %>