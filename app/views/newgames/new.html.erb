<% if @newgame.errors.any? %>
    <h2><%= pluralize(@newgame.errors.count, "error") %>エラーがあります。必須を埋めてください。</h2>
    <ul>
        <% @newgame.error.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @newgame do |f| %>
    <%= f.label :image %>
    <%= f.file_field :game_image, accept: "image/jpeg" %>

    <%= f.label :title %>
    <%= f.text_field :gametitle %>

    <%= f.label :time %>
    <%= f.text_field :gametime %>

   
    <%= f.label :clear %>
    <%= f.text_area :gameclear %>

    <%= f.label :review %>
    <%= f.text_area :gamebody %>

    <%= f.submit "submit" %>
<% end %>


<%= javascript_include_tag "menu.js" %>
<%= javascript_include_tag "jquery.js" %>
