<%= javascript_include_tag "menu.js" %>
<%= javascript_include_tag "jquery.js" %>
<% content_for :css do %>
  <%= stylesheet_link_tag 'game_new' %>
<% end %>

<div class="textform">
<h2>Sign up</h2>
<div class="postform">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :"User-name" %><br>
    <%= f.text_field :username, autofocus: true %><br>
    <br>
    <%= f.label :"User-id" %><br />
    <%= f.text_field :usernumber, autofocus: true %><br>
    <br>
    <%= f.label :"Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 70%;" %><br>
    <br>
    <%= f.label :"Password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <br>
    <%= f.label :"Password_confirmation" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br>
    <br><br>
    <span class="button"><%= f.submit "Sign up" %></span><br>
    <br>
    <span class="button"><%= render "devise/shared/links" %></span>
  <% end %>
</div>
</div>


